generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  // Relationships
  profile Profile @relation(fields: [profileId], references: [id])
  profileId Int @unique
}

model Profile {
  id Int @id @default(autoincrement())

  name String
  mobileNumber String
  email String
  password String
  role Role

  // Relationships
  user User?
}

model Book {
  id Int @id @default(autoincrement())

  title String
  author String
  genre String // Make it enum?
  city String
}

enum Role {
  OWNER
  SEEKER
}

