generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  // Relationships
  profile Profile @relation(fields: [profileId], references: [id])
  profileId Int @unique

  ownedBooks Book[] @relation("OwnedBooks")
  seekedBooks Book[] @relation("SeekedBooks")
}

model Profile {
  id Int @id @default(autoincrement())

  name String
  mobileNumber String
  email String
  password String
  role Role

  // Relationships
  user User?
}

model Book {
  id Int @id @default(autoincrement())

  title String
  author String
  genre String // Make it enum?
  city String
  coverUrl String 

  // Relationships
  ownerId Int @unique
  owner User @relation("OwnedBooks", fields: [ownerId], references: [id])

  seekerId Int @unique 
  seeker User @relation("SeekedBooks", fields: [seekerId], references: [id])
}

enum Role {
  OWNER
  SEEKER
}

